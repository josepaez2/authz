= content_for :nav_title do
  = "#{action_name.titleize} #{@role.name}"
  
section.section
  .container
    .columns
      .column.is-three-fifths
        .card
          .card-content
            = form_for @role do |f|
              = render 'fields', f: f
              .field
                .control
                  = f.submit 'Save', class: 'button is-primary is-fullwidth'
      .column
        = render 'help'
